# IMPORTANT: This is an example file. Copy to secrets.yaml and fill with actual base64-encoded values.
# To encode: echo -n "your-value" | base64
# Add secrets.yaml to .gitignore to prevent committing sensitive data

---
# JWT Secret
apiVersion: v1
kind: Secret
metadata:
  name: jwt-secret
  namespace: nushungry
type: Opaque
data:
  # Base64 encoded JWT secret key (at least 256 bits)
  secret: WU9VUl9KV1RfU0VDUkVUX0tFWV9IRVJF  # Example: "YOUR_JWT_SECRET_KEY_HERE"

---
# Config Server Secret
apiVersion: v1
kind: Secret
metadata:
  name: config-server-secret
  namespace: nushungry
type: Opaque
data:
  # Base64 encoded username and password for Config Server
  username: Y29uZmlnLXVzZXI=  # Example: "config-user"
  password: Y29uZmlnLXBhc3N3b3Jk  # Example: "config-password"

---
# PostgreSQL Admin Service Secret
apiVersion: v1
kind: Secret
metadata:
  name: postgres-admin-secret
  namespace: nushungry
type: Opaque
data:
  # Base64 encoded database credentials
  username: YWRtaW5fdXNlcg==  # Example: "admin_user"
  password: YWRtaW5fcGFzc3dvcmQ=  # Example: "admin_password"

