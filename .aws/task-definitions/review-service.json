{
  "family": "nushungry-dev-review-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "review-service",
      "image": "YOUR_ECR_REGISTRY/nushungry/review-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8084,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "dev"
        },
        {
          "name": "SERVER_PORT",
          "value": "8084"
        },
        {
          "name": "SPRING_DATA_MONGODB_URI",
          "value": "mongodb://YOUR_MONGODB_ENDPOINT:27017/review_service_db"
        },
        {
          "name": "SPRING_DATA_MONGODB_DATABASE",
          "value": "review_service_db"
        },
        {
          "name": "SPRING_RABBITMQ_HOST",
          "value": "YOUR_RABBITMQ_ENDPOINT"
        },
        {
          "name": "SPRING_RABBITMQ_PORT",
          "value": "5672"
        },
        {
          "name": "SPRING_RABBITMQ_USERNAME",
          "value": "admin"
        }
      ],
      "secrets": [
        {
          "name": "SPRING_DATA_MONGODB_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:YOUR_ACCOUNT_ID:secret:review-service/mongodb-username"
        },
        {
          "name": "SPRING_DATA_MONGODB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:YOUR_ACCOUNT_ID:secret:review-service/mongodb-password"
        },
        {
          "name": "SPRING_RABBITMQ_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:YOUR_ACCOUNT_ID:secret:rabbitmq/password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/nushungry-dev-review-service",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8084/actuator/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
