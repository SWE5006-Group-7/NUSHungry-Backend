{
  "family": "nushungry-dev-gateway-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "gateway-service",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.ap-southeast-1.amazonaws.com/nushungry/gateway-service:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        },
        {
          "name": "ADMIN_SERVICE_URL",
          "value": "http://admin-service.local:8082"
        },
        {
          "name": "CAFETERIA_SERVICE_URL",
          "value": "http://cafeteria-service.local:8083"
        },
        {
          "name": "REVIEW_SERVICE_URL",
          "value": "http://review-service.local:8084"
        },
        {
          "name": "MEDIA_SERVICE_URL",
          "value": "http://media-service.local:8085"
        },
        {
          "name": "PREFERENCE_SERVICE_URL",
          "value": "http://preference-service.local:8086"
        },
        {
          "name": "SPRING_DATA_REDIS_HOST",
          "value": "your-redis-endpoint.cache.amazonaws.com"
        },
        {
          "name": "SPRING_DATA_REDIS_PORT",
          "value": "6379"
        }
      ],
      "secrets": [
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:YOUR_ACCOUNT_ID:secret:nushungry/jwt-secret"
        },
        {
          "name": "SPRING_DATA_REDIS_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:YOUR_ACCOUNT_ID:secret:nushungry/redis-password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/nushungry-dev-gateway-service",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:8080/actuator/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
